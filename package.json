{
  "name": "cache-monitor",
  "version": "0.0.1",
  "description": "Part of the 5G-VICTORI media cache prefilling solution. Monitors availability of media items in [Cache](https://gitlab.irt.de/5g-victori/cache)",
  "author": "Christoph Ziegler",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@nestjs/microservices": "^6.11.11",
    "@nestjs/platform-express": "^6.11.11",
    "chokidar": "^3.4.3",
    "get-folder-size": "^2.0.1",
    "jsonfile": "^6.1.0",
    "md5": "^2.3.0",
    "messenger": "git+https://git@github.com/IRT-Open-Source/5gv-messenger.git",
    "node-nats-streaming": "^0.2.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "^6.9.4",
    "@nestjs/testing": "^6.11.11",
    "@types/express": "^4.17.9",
    "@types/jest": "^24.9.1",
    "@types/jsonfile": "^5.0.1",
    "@types/node": "^12.19.4",
    "@types/supertest": "^2.0.10",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
